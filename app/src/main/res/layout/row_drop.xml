<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/row_textview_padding"
    android:background="@drawable/bg_row_drop">

    <ImageView
        android:layout_width="@dimen/row_image_size"
        android:layout_height="@dimen/row_image_size"
        android:background="@null"
        android:src="@drawable/ic_drop" />

    <TextView
        android:id="@+id/tv_what"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/row_textview_padding"
        android:paddingRight="@dimen/row_textview_padding"
        android:textSize="@dimen/drop_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>